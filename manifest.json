{
  "name": "Type2Learn",
  "description": "Learn by typing the webpage text in the browswer itself!",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["my-styles.css"]
    }
  ],
  "browser_action" : {
    "default_popup" : "popup.html",
    "default_title" : "Type2Learn"
 },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/rcd16.png",
      "32": "/images/rcd32.png",
      "48": "/images/rcd48.png",
      "128": "/images/rcd128.png"
    }
  },
  "icons": {
    "16": "/images/rcd16.png",
    "32": "/images/rcd32.png",
    "48": "/images/rcd48.png",
    "128": "/images/rcd128.png"
  }
}